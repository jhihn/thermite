extends layout

block content
	h1 Thermite?

	h2 Nodes
	ul
		for node in nodes
			li= node.host + ':' + node.port

	form(action="/runquery", method="POST")
		.queryInput
			textarea(name="queryText",rows=10,cols=100) SELECT * FROM TestData
		.queryReduceInput
			for reduceName in reduceNames
				label
					span= reduceName
					input(type='radio',name='reduceName',value=reduceName)
		.queryButtons
			button(type="submit") Execute

	:coffeescript
		$ () ->
			$('.queryReduceInput input[type=radio]').first().prop('checked', true)