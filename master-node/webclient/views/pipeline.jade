extends layout

block content

	#digraph-container

	script(src='scripts/d3.v3.min.js')
	script(src='scripts/digraph-editor.js')

	:coffeescript
		pipelineData =
			steps: [
				{id: 0, reflexive: false}
				{id: 1, reflexive: true }
				{id: 2, reflexive: false}
			]

		pipelineData.links = [
			{source: pipelineData.steps[0], target: pipelineData.steps[1], left: false, right: true }
			{source: pipelineData.steps[1], target: pipelineData.steps[2], left: false, right: true }
		]

		$ ->
			createDigraphEditor '#digraph-container', pipelineData